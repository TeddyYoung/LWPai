<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_head_itt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/column_high"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvConsignee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="收货人" />

            <EditText
                android:id="@+id/etConsignee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入收货人"
                android:padding="15dp"
                android:singleLine="true"
                android:textSize="14dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <View style="@style/div_hor" />

        <LinearLayout
            style="@style/column_high"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="手机号码" />

            <EditText
                android:id="@+id/etAddAddressphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入手机号码"
                android:padding="15dp"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <View style="@style/div_hor" />

        <LinearLayout
            style="@style/column_high"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="省市区" />

            <TextView
                android:id="@+id/tvAddAddressChoose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:background="@null"
                android:gravity="right"
                android:hint="请选择省市区"
                android:padding="15dp"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <View style="@style/div_hor" />

        <LinearLayout
            style="@style/column_high"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDetailSite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="详细地址" />

            <EditText
                android:id="@+id/etAddAddressDetailSite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入详细地址"
                android:padding="15dp"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <View style="@style/div_hor" />

        <LinearLayout
            style="@style/column_high"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDefault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="设为默认" />

            <CheckBox
                android:id="@+id/cbAddAddress"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_blue_site"
                android:button="@null"
                android:gravity="right"
                android:padding="5dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <View style="@style/div_hor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(实物收货地址用于实物商品中奖后的发货，最多可添加3个)"
            android:textColor="@color/darkgray"
            android:textSize="13dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddAddressSave"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_btn_red"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>