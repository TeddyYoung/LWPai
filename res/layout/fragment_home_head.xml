<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.yfzx.lwpai.view.SlideShowView
                android:id="@+id/slideShowView"
                android:layout_width="match_parent"
                android:layout_height="150dp" >

                <ImageView
                    android:id="@+id/ivHomeBMW"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY" />
            </com.yfzx.lwpai.view.SlideShowView>

            <LinearLayout
                android:id="@+id/llytBotton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rdoBtnlucky"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_lucky"
                        android:gravity="center"
                        android:paddingBottom="@dimen/margin_3"
                        android:paddingTop="@dimen/margin_3"
                        android:text="幸运拍"
                        android:textSize="@dimen/bottom_font" />

                    <RadioButton
                        android:id="@+id/rdoBtnRed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_red"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_3"
                        android:text="红包区"
                        android:textSize="@dimen/bottom_font" />

                    <RadioButton
                        android:id="@+id/rdoOneYuan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_oneyuan"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_3"
                        android:text="一元拍"
                        android:textSize="@dimen/bottom_font" />

                    <RadioButton
                        android:id="@+id/rdoBtnSunaLone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/home_sunalone"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_3"
                        android:text="晒单"
                        android:textSize="@dimen/bottom_font" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View
                    style="@style/div_hor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/home_horn" />

                <com.yfzx.lwpai.view.AutoTextView
                    android:id="@+id/atvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" >
                </com.yfzx.lwpai.view.AutoTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/llytAnnounced"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:src="@drawable/home_clock" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即将揭晓"
                            android:textColor="@color/reds"
                            android:textSize="@dimen/font_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="海量商品送不停" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/tvHour"
                            style="@style/comm_black_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=":" />

                        <TextView
                            android:id="@+id/tvMinute"
                            style="@style/comm_black_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=":" />

                        <TextView
                            android:id="@+id/tvSecond"
                            style="@style/comm_black_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="00" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivIndexAd2"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_ad_2" />
                </LinearLayout>

                <View style="@style/div_ver" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="77dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tvluckyCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="本期幸运码"
                                    android:textColor="@color/actionbar_bg"
                                    android:textSize="@dimen/font_18" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tvST"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开拍时间："
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/font_12" />

                                <TextView
                                    android:id="@+id/tvStartTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2015-06-21"
                                    android:textColor="@color/darkgray"
                                    android:textSize="@dimen/font_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tvNumOne"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="08"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumTwo"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="20"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumThree"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="23"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumFour"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="35"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumFive"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="16"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumSix"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet"
                                    android:gravity="center"
                                    android:text="36"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />

                                <TextView
                                    android:id="@+id/tvNumSeven"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/tv_fillet_blue"
                                    android:gravity="center"
                                    android:text="15"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_10" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/div_hor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ivIndexAd3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/home_two" />

                        <View style="@style/div_ver" />

                        <ImageView
                            android:id="@+id/ivIndexAd4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/home_one" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>