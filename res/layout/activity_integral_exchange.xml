<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_head_itt" />

    <View style="@style/div_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/bggray"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextToal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6"
            android:text="总积分："
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/btn_orange"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View style="@style/div_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分兑换红包比例10：1，既10积分兑换1元红包。"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <View style="@style/div_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要兑换："
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/edTxtIntegral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您要兑换成红包的积分(10的整数倍)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/div_hor" />

    <Button
        android:id="@+id/btnIntegral"
        style="@style/comm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="33dp"
        android:text="积分兑换 "
        android:textSize="@dimen/font_16" />

</LinearLayout>