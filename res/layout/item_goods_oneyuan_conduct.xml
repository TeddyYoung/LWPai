<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llytUrlTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/ivLuckRedImg"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:src="@drawable/iphone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvLuckTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="第一期-“0元拍”宝马您买车我出钱" />

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvOnePurchaseNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总需100人次"
                            android:textColor="@color/darkgray"
                            android:textSize="@dimen/font_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:orientation="horizontal" >

                            <ProgressBar
                                android:id="@+id/pabrOneYuan"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="7dp"
                                android:layout_marginRight="8dp"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progressbar" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="bottom"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvCurrentPurchaseNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已参与10688"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/font_10"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvShengYu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/font_10" />

                            <TextView
                                android:id="@+id/tvLastPurchaseNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10688"
                                android:textColor="@color/darkblue"
                                android:textSize="@dimen/font_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="份"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvUrlTip"
                        style="@style/comm_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="参与竞拍" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/div_hor" />

</LinearLayout>