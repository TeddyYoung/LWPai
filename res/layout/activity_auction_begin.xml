<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/llBidders"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llytBotton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvLuckAuction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="幸运拍" />

            <TextView
                android:id="@+id/tvRedPacket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="红包区" />

            <TextView
                android:id="@+id/tvOneYuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一元拍" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="3dip" >

            <View style="@style/div_hor" />

            <ImageView
                android:id="@+id/ivBottomShare"
                android:layout_width="100dip"
                android:layout_height="2dip"
                android:scaleType="matrix"
                android:src="@color/btn_orange" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:flipInterval="10"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBidders"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_Bidders"
            style="@style/comm_small_btn"
            android:gravity="center"
            android:text="参与竞拍" />
    </LinearLayout>

</RelativeLayout>