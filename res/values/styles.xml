<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="column_high">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="left_right_margins">
        <item name="android:layout_marginLeft">@dimen/aboutlength</item>
        <item name="android:layout_marginRight">@dimen/aboutlength</item>
    </style>

    <style name="comm_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="comm_btn1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape2</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="tag_btn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape1</item>
    </style>

    <style name="comm_small_btn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape4</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="comm_green_btn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_btn_green</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="comm_black_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_black</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="comm_gray_btn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_btn_gray</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="goods_gray_btn">
        <item name="android:width">150dp</item>
        <item name="android:height">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/goodsgrey</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="div_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/bottom_div_color</item>
    </style>
    
    <style name="div_hor_orange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/btn_orange</item>
    </style>

    <style name="div_ver">
        <item name="android:layout_width">0.3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bottom_div_color</item>
    </style>

    <!-- 无黑框背景style -->
    <style name="Dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>